{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "prefer-const": [
            "error"
        ],
        "space-infix-ops": [
            "error"
        ],
        "no-console": [
            "error",
            { "allow": [
                    "info"
                ]
            }
        ]
    }
}